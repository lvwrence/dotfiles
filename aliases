if [ "$(uname)" '==' "Darwin" ]; then
    alias ls='ls -G'
elif [ "$(expr substr $(uname -s) 1 5)" '==' "Linux" ]; then
    alias ls='ls --color=auto'
fi

alias weather='weather -hide-icon'
alias matrix='cmatrix'

alias p='python'
alias l='ls -laxoh'
alias t='tmux'
alias ..='cd ..'
alias history='history 1'
alias hgrep='history | grep'
alias dgrep='grep -r'
alias zshrc='${=EDITOR} ~/.zshrc' # Quick access to the ~/.zshrc file

alias source='source ~/.zshrc'
alias tsource='tmux source ~/.tmux.conf'
alias vim='code'

alias g='git'
alias gco='git checkout'
alias gs='git status'
alias gb='git branch'
alias gl='log'
alias ga='git add -p'
alias gd='git diff --color --color-words --abbrev'
alias gdc='git diff --cached'
alias push='git push origin HEAD'
alias pull='git pull origin HEAD'

alias migrate='sequelize db:drop && sequelize db:create && sequelize db:migrate && sequelize db:seed:all'
